<%= flash[:notice] %>
<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.profile_image, size:'100x100' %>
        <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
        <% end %>

        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>

          <div class="row">
          <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
          </div>
          <h2 class="mt-3">New book</h2>
          <%= form_with model: @book do |f| %>
          <div class="form-group">

          <h5>Title</h5>
          <%= f.text_field :title, class: 'from-control book_title', type: 'text' %>
          </div>

          <div class="form-group">
          <h5>Opinion</h5>
          <%= f.text_field :body , class: 'form-control book_body', style: 'height: 53px;' %>
          </div>

          <div class="form-group">
          <%= f.submit 'Create Book', class: 'btn btn-success' %>
          <% end %>
          </div>
      </div>

      <div class="col-md-8 offset-md-1 ">
        <h2>Users</h2>
        <table class=" table table-hover table-inverse ">
          <thead>
            <tr>
              <th></th>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @Users.each do |user| %>
            <tr>
              <td>
                <% if user.profile_image.attached? %>
                  <%= link_to user_path(user.id) do%>
                  <%= image_tag user.profile_image, size:'100x100' %>
                  <% end %>
                <% else %>
                  <%= image_tag 'no_image', size: "100x100" %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td>
                <%= link_to "Show", user_path(user.id) %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>