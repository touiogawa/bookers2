<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
　　　　<h1>Editing Book</h1>
　　　　　<%= form_with model: @book do |f| %>
　　　　　<div class="form-roup">
　　　　　  <label for="book_title">Title</label>
　　　　　  <%= f.text_field :title %>
　　　　　</div>
　　　　　<div class="form-roup">
　　　　　  <label for="book_title">Opinion</label>
　　　　　  <%= f.text_area :body %>
　　　　　</div>
　　　　　<div class="form-roup">
　　　　　  <%= f.submit 'Update Book', class: "btn btn-success" %>
　　　　　</div>
　　　　　<% end %>
　　　　　<%= link_to "Show", book_path(@book.id) %>
　　　　　|
　　　　　<%= link_to "Back", books_path %>
　　  </div>
    </div>
  </div>

